
Import('*')

import glob

try:
	env
except NameError:
	pass
else:
	plugin	= {
		'type':			'scripting',
		'state':		'stable',
		'depends':		['perl']
		}

	Return('plugin')

try:
	penv
except NameError:
	pass
else:
	penv.Install('%s/scripts/' % penv['DATADIR'], glob.glob('../../contrib/perl/*.pl'))

