
Import('*')

try:
	defines
except NameError:
	pass
else:
	for o in ['gnutls', 'openssl']:
		if o in optdeps:
			defines['JABBER_HAVE_%s' % o.upper()] = True
			break

try:
	env
except NameError:
	pass
else:
	plugin	= {
		'type':			'protocol',
		'state':		'stable',
		'depends':		['expat'],
		'optdepends':	[['gnutls', 'openssl'], 'zlib']
		}

	Return('plugin')

