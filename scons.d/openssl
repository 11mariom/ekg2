
# openssl (optional in jabber, required by sim)

Import('*')

out = conf.PkgConfig('openssl', flags)
defines['HAVE_OPENSSL'] = out

if out:
	old	= SetFlags(env, flags)
	out = conf.CheckLibWithHeader(env['LIBS'][0], [], 'C', 'SSL_new(0);', 0)
	RestoreFlags(env, old)

Return('out')

