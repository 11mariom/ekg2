
# ruby

Import('*')

out = conf.PkgConfig(None, libs, ccflags, linkflags, None, 'ruby', None,
	'-r mkmf -e "print \\"-I\\" + Config::CONFIG[\\"archdir\\"]"',
	'-r mkmf -e "c=Config::CONFIG; libs=\\"-l\\" + c[\\"RUBY_SO_NAME\\"] + \\" \\" + c[\\"LIBS\\"]; print libs"')
Return('out')

