
# gnutls (jabber)

Import('*')

out = conf.PkgConfig('gnutls > 1.0.0', flags)
defines['HAVE_GNUTLS'] = out

if out:
	old	= SetFlags(env, flags)
	out = conf.CheckLibWithHeader(env['LIBS'][0], [], 'C', 'gnutls_init(0, 0);', 0)
	RestoreFlags(env, old)

Return('out')

