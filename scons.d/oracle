
# oracle (need testing)

import os

Import('*')

if 'ORACLEHOME' in os.environ:
	orhome = os.environ['ORACLEHOME']
	linkflags.append('-L%s/lib' % orhome)
	ccflags.append('-I%s/rdbms/public' % orhome)

	out = conf.CheckLib('clntsh', 'sqlcxt', ['oci.h'], None, 0)
	if (out):
		libs.append('clntsh')

else:
	print '[oracle] ${ORACLEHOME} not defined.'
	out = False

Return('out')

